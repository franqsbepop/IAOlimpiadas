{
  "compilerOptions": {
    "module": "ESNext", // Enables ESM module syntax
    "target": "ESNext", // Compiles to modern JavaScript
    "moduleResolution": "node", // Resolves modules in a Node.js-like manner
    "esModuleInterop": true, // Allows default imports from modules without a default export
    "skipLibCheck": true, // Skips type checking of declaration files
    "forceConsistentCasingInFileNames": true // Ensures consistent casing in file names
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "vite.config.ts"
  ]
}

